    <!-- Avatar Selection Modal -->
    <div id="avatarModal" class="avatar-modal">
      <div class="avatar-modal-content">
        <div class="avatar-modal-header">
          <h3><i class="fas fa-user-circle"></i>Choisir un nouvel avatar</h3>
          <span class="avatar-modal-close">&times;</span>
        </div>
        <div class="avatar-modal-body">
          <div class="avatar-grid">
            {{#for 1 11}}
              <div class="avatar-option" data-avatar="{{this}}">
                <img src="/images/avatars/{{this}}.png" alt="Avatar {{this}}" class="avatar-selection">
                {{#if (eq ../user.avatar this)}}
                  <div class="avatar-selected"><i class="fas fa-check"></i></div>
                {{/if}}
              </div>
            {{/for}}
          </div>
        </div>
        <div class="avatar-modal-footer">
          <button id="cancelAvatarBtn">Annuler</button>
          <button id="saveAvatarBtn">Enregistrer</button>
