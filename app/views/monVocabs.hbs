<div class="vocabulary-container">
  <h1>{{title}}</h1>
    
  {{#if error}}
  <div class="alert alert-error">
    {{error}}
  </div>
  {{/if}}
    
  {{#if success}}
  <div class="alert alert-success">
    {{success}}
  </div>
  {{/if}}
    
  <a href="/monVocabs/add" class="add-word-btn">
    <i class="fas fa-plus"></i> Ajouter un nouveau mot
  </a>
    
  {{#if hasWords}}
    {{#each wordsByLevel as |levelWords level|}}
    <div class="level-container">
      <div class="level-header">
        <span>Niveau {{level}}</span>
        <span class="level-badge">{{levelWords.length}} mot(s)</span>
      </div>
      <table class="words-table">
        <thead>
          <tr>
            <th width="35%">Mot</th>
            <th width="15%">Type</th>
            <th width="15%">Meaning</th>
            <th width="35%">Prononciation</th>
            <th width="15%">Synonymes</th>
            <th width="15%">Antonymes</th>
            <th width="15%">Exemple</th>
            <th width="15%">Grammaire</th>
            <th width="15%">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each levelWords}}
          <tr>
            <td class="word-item">
              {{word}}
              <div class="word-info">
                <h4>{{word}}</h4>
                <p><span class="label">Traduction:</span> {{meaning}}</p>
                {{#if definition}}
                <p><span class="label">Définition:</span> {{definition}}</p>
                {{/if}}
                {{#if example}}
                <p><span class="label">Exemple:</span> {{example}}</p>
                {{/if}}
              </div>
            </td>
            <td>{{type}}</td> 
            <td>{{meaning}}</td>
            <td>{{pronunciation}}</td>
            <td>{{synonyms}}</td>
            <td>{{antonyms}}</td>
            <td>{{example}}</td>
            <td>{{grammar}}</td>
            <td>
              <div class="action-buttons">
                <a href="/dashboard/edit/{{id}}" class="edit-btn" title="Modifier">
                  <i class="fas fa-edit"></i>
                </a>
                <a href="/dashboard/delete/{{id}}" class="delete-btn" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce mot?');">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{/each}}
  {{else}}
    <div class="no-words">
      <i class="fas fa-book"></i>
      <h3>Aucun mot dans votre vocabulaire</h3>
      <p>Commencez à ajouter des mots pour enrichir votre vocabulaire.</p>
      <a href="/dashboard/add" class="btn">Ajouter votre premier mot</a>
    </div>
  {{/if}}
    
  <div class="home-cta" style="margin-top: 40px;">
    <a href="/" class="btn">Retour à l'accueil</a>
  </div>
</div>
  
